<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profil">

    <ImageView
        android:id="@+id/bgGradientImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/bg" />

    <ImageView
        android:id="@+id/menacingBG5"
        android:layout_width="219dp"
        android:layout_height="236dp"
        android:rotation="5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleTendency"
        app:srcCompat="@drawable/menacing_3" />

    <ImageView
        android:id="@+id/menacingBG6"
        android:layout_width="128dp"
        android:layout_height="443dp"
        android:rotation="-5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/menacing2" />

    <ImageView
        android:id="@+id/box"
        android:layout_width="413dp"
        android:layout_height="143dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleProfil"
        app:srcCompat="@drawable/box" />

    <ImageView
        android:id="@+id/profilAddIcon"
        android:layout_width="68dp"
        android:layout_height="75dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/profilLikeIcon"
        app:layout_constraintStart_toEndOf="@+id/profilSearchIcon"
        app:srcCompat="@drawable/icons8_plus_100_default" />

    <ImageView
        android:id="@+id/profilHomeIcon"
        android:layout_width="72dp"
        android:layout_height="73dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/icons8_home_96_default" />

    <ImageView
        android:id="@+id/profilSearchIcon"
        android:layout_width="67dp"
        android:layout_height="72dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/profilProfilIcon"
        app:layout_constraintHorizontal_bias="0.051"
        app:layout_constraintStart_toEndOf="@+id/profilHomeIcon"
        app:srcCompat="@drawable/icons8_loupe_100_default" />

    <ImageView
        android:id="@+id/profilLikeIcon"
        android:layout_width="76dp"
        android:layout_height="75dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/profilProfilIcon"
        app:layout_constraintHorizontal_bias="0.935"
        app:layout_constraintStart_toEndOf="@+id/profilHomeIcon"
        app:srcCompat="@drawable/icons8_heart_100_default" />

    <ImageView
        android:id="@+id/profilProfilIcon"
        android:layout_width="70dp"
        android:layout_height="76dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/icons8_account_96" />

    <TextView
        android:id="@+id/titleProfil"
        android:layout_width="812dp"
        android:layout_height="72dp"
        android:background="#FFBD59"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center"
        android:text="MON PROFIL"
        android:textColor="#FFFFFF"
        android:textSize="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/titleRecentAdd"
        android:layout_width="812dp"
        android:layout_height="72dp"
        android:layout_marginTop="20dp"
        android:background="#FFBD59"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center"
        android:onClick="profilSelect"
        android:text="Mes Ajouts Récents"
        android:textColor="#FFFFFF"
        android:textSize="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonLogOff" />

    <ImageView
        android:id="@+id/profilPicture"
        android:layout_width="128dp"
        android:layout_height="134dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:onClick="profilSelect"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleProfil"
        app:srcCompat="@drawable/icons8_account_96" />

    <TextView
        android:id="@+id/displayNameTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nom :"
        android:textColor="#FFFFFF"
        android:textSize="23dp"
        app:layout_constraintStart_toEndOf="@+id/profilPicture"
        app:layout_constraintTop_toTopOf="@+id/box" />

    <TextView
        android:id="@+id/displayName"
        android:layout_width="265dp"
        android:layout_height="31dp"
        android:text="inputServer"
        android:textColor="#FFFFFF"
        android:textSize="23dp"
        app:layout_constraintStart_toEndOf="@+id/profilPicture"
        app:layout_constraintTop_toBottomOf="@+id/displayNameTag" />

    <TextView
        android:id="@+id/displayEmailTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        android:text="Email :"
        android:textColor="#FFFFFF"
        android:textSize="23dp"
        app:layout_constraintStart_toEndOf="@+id/profilPicture"
        app:layout_constraintTop_toBottomOf="@+id/displayName" />

    <TextView
        android:id="@+id/displayEmail"
        android:layout_width="262dp"
        android:layout_height="29dp"
        android:layout_marginStart="4dp"
        android:text="inputServer"
        android:textColor="#FFFFFF"
        android:textSize="23dp"
        app:layout_constraintStart_toEndOf="@+id/profilPicture"
        app:layout_constraintTop_toBottomOf="@+id/displayEmailTag" />

    <Button
        android:id="@+id/buttonLogOff"
        android:layout_width="225dp"
        android:layout_height="61dp"
        android:layout_marginTop="16dp"
        android:onClick="logout"
        android:text="Déconnexion"
        android:textSize="23dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/box" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/profilImgScroller"
        android:layout_width="414dp"
        android:layout_height="268dp"
        app:layout_constraintBottom_toTopOf="@+id/profilAddIcon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleRecentAdd"
        app:layout_constraintVertical_bias="0.75" />

</androidx.constraintlayout.widget.ConstraintLayout>