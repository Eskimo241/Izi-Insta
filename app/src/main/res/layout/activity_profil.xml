<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profil">

    <ImageView
        android:id="@+id/bgGradientImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/bg" />

    <ImageView
        android:id="@+id/menacingBG3"
        android:layout_width="219dp"
        android:layout_height="236dp"
        android:rotation="5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleSearch"
        app:srcCompat="@drawable/menacing_3" />

    <ImageView
        android:id="@+id/menacingBG4"
        android:layout_width="127dp"
        android:layout_height="444dp"
        android:rotation="-5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/menacing2" />

    <ImageView
        android:id="@+id/box"
        android:layout_width="412dp"
        android:layout_height="155dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleProfil"
        app:srcCompat="@drawable/box" />

    <ImageView
        android:id="@+id/addImageIcon"
        android:layout_width="68dp"
        android:layout_height="75dp"
        android:onClick="toAddImagePage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/likesIcon"
        app:layout_constraintStart_toEndOf="@+id/searchIcon"
        app:srcCompat="@drawable/icons8_plus_100_default" />

    <ImageView
        android:id="@+id/tendencyIcon"
        android:layout_width="72dp"
        android:layout_height="73dp"
        android:onClick="toTendencyPage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/icons8_home_96_default" />

    <ImageView
        android:id="@+id/searchIcon"
        android:layout_width="67dp"
        android:layout_height="72dp"
        android:onClick="toSearchPage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/profilIcon"
        app:layout_constraintHorizontal_bias="0.051"
        app:layout_constraintStart_toEndOf="@+id/tendencyIcon"
        app:srcCompat="@drawable/icons8_loupe_100_default" />

    <ImageView
        android:id="@+id/likesIcon"
        android:layout_width="76dp"
        android:layout_height="75dp"
        android:onClick="toLikesPage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/profilIcon"
        app:layout_constraintHorizontal_bias="0.935"
        app:layout_constraintStart_toEndOf="@+id/tendencyIcon"
        app:srcCompat="@drawable/icons8_heart_100_default" />

    <ImageView
        android:id="@+id/profilIcon"
        android:layout_width="70dp"
        android:layout_height="76dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/icons8_account_96" />

    <TextView
        android:id="@+id/titleProfil"
        android:layout_width="812dp"
        android:layout_height="72dp"
        android:background="#FFBD59"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center"
        android:text="MON PROFIL"
        android:textColor="#FFFFFF"
        android:textSize="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/profilPicture"
        android:layout_width="128dp"
        android:layout_height="134dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleProfil"
        app:srcCompat="@drawable/icons8_account_96" />

    <TextView
        android:id="@+id/displayNameTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nom d'utilisateur:"
        android:textColor="#FFFFFF"
        android:textSize="23dp"
        app:layout_constraintStart_toEndOf="@+id/profilPicture"
        app:layout_constraintTop_toTopOf="@+id/box" />

    <TextView
        android:id="@+id/displayName"
        android:layout_width="265dp"
        android:layout_height="31dp"
        android:text="inputSharedPref"
        android:textColor="#FFFFFF"
        android:textSize="23dp"
        app:layout_constraintStart_toEndOf="@+id/profilPicture"
        app:layout_constraintTop_toBottomOf="@+id/displayNameTag" />

    <TextView
        android:id="@+id/displayEmailTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        android:text="JoeStars :"
        android:textColor="#FFFFFF"
        android:textSize="23dp"
        app:layout_constraintStart_toEndOf="@+id/profilPicture"
        app:layout_constraintTop_toBottomOf="@+id/displayName" />

    <TextView
        android:id="@+id/displayLikes"
        android:layout_width="262dp"
        android:layout_height="29dp"
        android:layout_marginStart="4dp"
        android:text="inputServer"
        android:textColor="#FFFFFF"
        android:textSize="23dp"
        app:layout_constraintStart_toEndOf="@+id/profilPicture"
        app:layout_constraintTop_toBottomOf="@+id/displayEmailTag" />

    <Button
        android:id="@+id/buttonLogOff"
        android:layout_width="225dp"
        android:layout_height="61dp"
        android:layout_marginTop="16dp"
        android:onClick="logout"
        android:text="DÃ©connexion"
        android:textSize="23dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/box" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="92dp"
        android:layout_height="91dp"
        app:layout_constraintBottom_toBottomOf="@+id/box"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.866"
        app:layout_constraintStart_toEndOf="@+id/profilPicture"
        app:layout_constraintTop_toTopOf="@+id/box"
        app:layout_constraintVertical_bias="0.968"
        app:srcCompat="@drawable/icons8__toile_100_default" />

    <TextView
        android:id="@+id/displayJoeStars"
        android:layout_width="82dp"
        android:layout_height="79dp"
        android:gravity="center"
        android:text="1"
        android:textColor="#FFD700"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
        app:layout_constraintEnd_toEndOf="@+id/imageView3"
        app:layout_constraintStart_toStartOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="@+id/imageView3" />

</androidx.constraintlayout.widget.ConstraintLayout>