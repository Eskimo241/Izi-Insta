<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="0dp"
    android:layout_marginBottom="10dp">

    <ImageView
        android:id="@+id/bgImageView"
        android:layout_width="420dp"
        android:layout_height="420dp"
        android:scaleType="centerCrop"
        android:contentDescription="@string/empty_placeholder"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/box2" />

    <ImageView
        android:id="@+id/likeImageView"
        android:layout_width="83dp"
        android:layout_height="61dp"
        android:layout_marginTop="4dp"
        android:contentDescription="@string/CD_like_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.46"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:srcCompat="@drawable/icons8_heart_100_black" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="321dp"
        android:layout_height="268dp"
        android:scaleType="centerCrop"
        android:contentDescription="@string/CD_media_image"
        app:layout_constraintBottom_toBottomOf="@+id/bgImageView"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintEnd_toEndOf="@+id/bgImageView"
        app:layout_constraintHorizontal_bias="0.535"
        app:layout_constraintStart_toStartOf="@+id/bgImageView"
        app:layout_constraintTop_toBottomOf="@+id/bannerImageView"
        app:layout_constraintVertical_bias="0.084"
        app:srcCompat="@drawable/imagetest" />

    <TextView
        android:id="@+id/nbLikesImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/placeholder_like"
        android:textColor="#000000"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@+id/likeImageView"
        app:layout_constraintStart_toEndOf="@+id/likeImageView"
        app:layout_constraintTop_toTopOf="@+id/likeImageView" />

    <ImageView
        android:id="@+id/bannerImageView"
        android:layout_width="414dp"
        android:layout_height="65dp"
        android:layout_marginTop="4dp"
        android:contentDescription="@string/empty_placeholder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/box" />

    <TextView
        android:id="@+id/descImageView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        android:text="@string/placeholder_image_desc"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/bannerImageView"
        app:layout_constraintEnd_toEndOf="@+id/bannerImageView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/bannerImageView"
        app:layout_constraintTop_toTopOf="@+id/bannerImageView"
        app:layout_constraintVertical_bias="0.454" />

</androidx.constraintlayout.widget.ConstraintLayout>