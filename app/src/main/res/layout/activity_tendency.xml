<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Create_Account">

    <ImageView
        android:id="@+id/bgGradientImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/bg" />

    <TextView
        android:id="@+id/titleTendency"
        android:layout_width="812dp"
        android:layout_height="72dp"
        android:background="#FFBD59"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center"
        android:text="TENDENCY"
        android:textColor="#FFFFFF"
        android:textSize="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/tendencyHomeIcon"
        android:layout_width="72dp"
        android:layout_height="73dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/icons8_home_96" />

    <ImageView
        android:id="@+id/tendencySearchIcon"
        android:layout_width="67dp"
        android:layout_height="72dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tendencyProfilIcon"
        app:layout_constraintHorizontal_bias="0.036"
        app:layout_constraintStart_toEndOf="@+id/tendencyHomeIcon"
        app:srcCompat="@drawable/icons8_loupe_100_default" />

    <ImageView
        android:id="@+id/tendencyAddIcon"
        android:layout_width="68dp"
        android:layout_height="75dp"
        app:layout_constraintBottom_toBottomOf="@+id/bgGradientImage"
        app:layout_constraintEnd_toStartOf="@+id/tendencyLikeIcon"
        app:layout_constraintStart_toEndOf="@+id/tendencySearchIcon"
        app:srcCompat="@drawable/icons8_plus_100_default" />

    <ImageView
        android:id="@+id/tendencyLikeIcon"
        android:layout_width="76dp"
        android:layout_height="75dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tendencyProfilIcon"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintStart_toStartOf="@+id/tendencyHomeIcon"
        app:srcCompat="@drawable/icons8_heart_100_default" />

    <ImageView
        android:id="@+id/tendencyProfilIcon"
        android:layout_width="70dp"
        android:layout_height="76dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/icons8_account_96_default" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/profilImgScroller"
        android:layout_width="420dp"
        android:layout_height="579dp"
        app:layout_constraintBottom_toTopOf="@+id/tendencyAddIcon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleTendency" />

</androidx.constraintlayout.widget.ConstraintLayout>